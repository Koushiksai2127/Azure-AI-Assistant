{
  "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
  "type": "AdaptiveCard",
  "version": "1.3",
  "style": "emphasis",
  "body": [
    {
      "type": "Container",
      "items": [
        {
          "type": "ColumnSet",
          "columns": [
            {
              "type": "Column",
              "width": "auto",
              "items": [
                {
                  "type": "Image",
                  "url": "https://cdn-icons-png.flaticon.com/512/2879/2879407.png",
                  "size": "Medium",
                  "altText": "Security Assistant Icon"
                }
              ]
            },
            {
              "type": "Column",
              "width": "stretch",
              "items": [
                {
                  "type": "TextBlock",
                  "text": "**Welcome to the AI Assistant**",
                  "weight": "Bolder",
                  "size": "Medium",
                  "wrap": true
                },
                {
                  "type": "TextBlock",
                  "text": "Your AI-powered assistant to streamline your programs.",
                  "size": "Small",
                  "isSubtle": true,
                  "wrap": true
                }
              ]
            }
          ],
          "spacing": "Small"
        }
      ],
      "padding": {
        "top": "Small",
        "bottom": "Small",
        "left": "Medium",
        "right": "Medium"
      }
    },
    {
      "type": "TextBlock",
      "text": "I'm your AI-powered Security and Compliance Assistant navigate you to guides, policies, and best practices",
      "wrap": true,
      "size": "Default"
    },
    {
      "type": "FactSet",
      "spacing": "large",
      "facts": [
        {
          "title": "Program 1",
          "value": "Access guides for program 1"
        },
        {
          "title": "Program 2",
          "value": "Access guides for program 2"
        }

      ]
    },
    {
      "type": "Container",
      "items": [
        {
          "type": "ColumnSet",
          "horizontalAlignment": "Center",
          "columns": [
            {
              "type": "Column",
              "width": "stretch",
              "items": []
            },
            {
              "type": "Column",
              "width": "auto",
              "items": [
                {
                  "type": "ActionSet",
                  "actions": [
                    {
                      "type": "Action.Submit",
                      "title": "click here to get assistance",
                      "style": "default",
                      "data": {
                        "id": "topics"
                      }
                    }
                  ],
                  "horizontalAlignment": "Center"
                }
              ]
            },
            {
              "type": "Column",
              "width": "auto",
              "items": []
            },
            {
              "type": "Column",
              "width": "stretch",
              "items": []
            }
          ]
        }
      ]
    }
  ]
}
