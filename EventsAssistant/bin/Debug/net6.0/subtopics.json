{
  "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
  "type": "AdaptiveCard",
  "version": "1.3",
  "body": [
    {
      "type": "TextBlock",
      "text": "Please select one of the following guidelines:",
      "weight": "bolder",
      "size": "medium"
    },
    {
      "type": "Container",
      "items": [
        {
          "$data": "${subtopics}",
          "actions": [
            {
              "type": "Action.Submit",
              "title": "${title}",
              "data": {
                "msteams": {
                  "type": "imBack",
                  "value": "${value}"
                }
              }
            }
          ],
          "type": "ActionSet"
        }
      ]
    }
  ]
}
