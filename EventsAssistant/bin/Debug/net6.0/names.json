{
  "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
  "type": "AdaptiveCard",
  "version": "1.3",
  "body": [
    {
      "type": "TextBlock",
      "text": "Please select one of the following documents:",
      "weight": "Bolder",
      "size": "Medium"
    },
    {
      "type": "Container",
      "items": [
        {
          "$data": "${names}", // Change this to reference the names
          "type": "ActionSet",
          "actions": [
            {
              "type": "Action.Submit",
              "title": "${title}", // Use the name as title
              "data": {
                "msteams": {
                  "type": "imBack",
                  "value": "${value}" // Value sent back when name is clicked
                }
              }
            }
          ]
        }
      ]
    }
  ]
}
