{
  "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
  "type": "AdaptiveCard",
  "version": "1.3",
  "body": [
    {
      "type": "TextBlock",
      "text": "Here is the relevant guidance. Please select the program you need assistance with:",
      "wrap": true,
      "size": "medium",
      "spacing": "large"
    },
    {
      "type": "ColumnSet",
      "columns": [
        {
          "type": "Column",
          "width": "stretch",
          "items": [
            {
              "type": "Input.ChoiceSet",
              "id": "selectedName",
              "isMultiSelect": false,
              "placeholder": "Search or select the program",
              "choices": []
            }
          ]
        },
        {
          "type": "Column",
          "width": "auto",
          "items": [
            {
              "type": "ActionSet",
              "actions": [
                {
                  "type": "Action.Submit",
                  "title": "Get Assistance",
                  "style": "positive",
                  "data": {
                    "action": "selectName"
                  }
                }
              ]
            }
          ]
        }
      ]
    }
  ]
}